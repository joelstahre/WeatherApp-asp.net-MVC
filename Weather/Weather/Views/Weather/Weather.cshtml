@model Weather.ViewModels.WeatherData

@{
    ViewBag.Title = "Weather";
}

<h2 class="h2">Weather forecast for @Model.getLocation()</h2>

<div class="container">
    <div class="row">

        @foreach (var item in Model.getList()) {

            <div class="span2">
                <div class="box">
                    <p class="day">
                        @Model.getDay(@item.Time)<br />
                    </p>

                    <img src="http://openweathermap.org/img/w/@(item.SymbolId).png" alt="@(item.Desc)" title="@(item.Desc)">

                    <p class=" temp">
                        @Model.getTemp(@item.Temperature) C
                    </p>
                </div>
            </div>

        }
    </div>
</div>
<div>
    @Html.ActionLink("Search for a new Location", "Index")
</div>
